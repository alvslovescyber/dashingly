{
  "name": "glasspi-dashboard",
  "productName": "GlassPi Dashboard",
  "version": "1.0.0",
  "description": "A production-quality kiosk dashboard for Raspberry Pi with glassmorphic UI",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "build:linux": "vue-tsc && vite build && electron-builder --linux",
    "build:linux-arm64": "vue-tsc && vite build && electron-builder --linux --arm64",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .vue,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{vue,ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{vue,ts,tsx,css,json}\"",
    "db:seed": "npx tsx src/main/db/seed.ts"
  },
  "dependencies": {
    "better-sqlite3": "^11.1.2",
    "chart.js": "^4.4.3",
    "express": "^4.19.2",
    "lucide-vue-next": "^0.395.0",
    "openai": "^4.52.0",
    "qrcode": "^1.5.3",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.19",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.8.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.53.1",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.26"
  },
  "build": {
    "appId": "com.glasspi.dashboard",
    "productName": "GlassPi Dashboard",
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "config",
        "to": "config",
        "filter": [
          "*.example.json"
        ]
      }
    ]
  }
}
